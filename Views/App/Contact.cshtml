@using SampleNetCoreMVC.Models
@model ContactViewModel
@{
    ViewBag.Title = "Contact Us!";
}
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}

<div class="row mx-5 px-5">

        <form class="my-2 contactForm" method="post">

            <div asp-validation-summary="ModelOnly"></div>

            <label class="h4">GLB: @ViewBag.Title</label>

            <div class="form-group my-2">
                <label asp-for="FullName">
                    Your Name
                </label>
                <input data-val="true" data-val-required="This field is required" asp-for="FullName" type="text" class="form-control" id="inputFullName" placeholder="Type your full name here" />
                <span asp-validation-for="FullName"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="Email">
                    Your Email
                </label>
                <input data-val="true" data-val-required="This field is required" asp-for="Email" type="email" class="form-control" id="inputEmail" placeholder="Type your email address here" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="MessageSubject">
                    Subject Title
                </label>
                <input asp-for="MessageSubject" type="text" class="form-control" id="inputSubject" placeholder="Type the title of your message here" />
                <span asp-validation-for="MessageSubject"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="MessageBody">
                    Message
                </label>
                <input asp-for="MessageBody" type="text" class="form-control" id="inputBody" placeholder="Type your message here" />
                <span asp-validation-for="MessageBody"></span>
            </div>

            <div class="form-group">

                <button type="submit" class="btn btn-dark">Submit</button>

            </div>

            <span class="my-3">@ViewBag.UserMessage</span>

        </form>

    </div>